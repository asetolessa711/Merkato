{
  "name": "merkato-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
  "test:all": "node ./scripts/run-all-tests.js",
  "test:all:ps": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-all-tests.ps1",
  "test:backend:baseline:record": "cd backend && npm run test:baseline:record",
  "test:backend:baseline:record:stable": "cd backend && npm run test:baseline:record:stable",
  "test:backend:baseline:verify": "cd backend && npm run test:baseline:verify",
  "verify:baseline": "npm run test:backend:baseline:verify && npm run test:frontend:baseline:verify",
  "test:frontend:baseline:verify": "cd frontend && npm run test:baseline:verify",
  "test:frontend:baseline:record": "cd frontend && npm run test:baseline:record",
    "test:e2e": "npm --prefix frontend run cy:run",
    "start:backend": "cd backend && node server.js",
  "start:frontend": "cd frontend && npm start",
  "dev": "node ./scripts/start-dev.js",
  "dev:ps": "powershell -NoProfile -ExecutionPolicy Bypass -Command node ./scripts/start-dev.js",
  "doctor": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-doctor.ps1",
  "doctor:fix": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-doctor.ps1 -FixFirewall"
  },
  "devDependencies": {
  "axios": "^1.11.0",
  "cypress": "^14.5.3",
  "@commitlint/config-conventional": "^18.6.3"
  },
  "dependencies": {
    "openai": "^5.16.0"
  }
}
