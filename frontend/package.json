{
  "name": "merkato-frontend",
  "version": "1.0.0",
  "description": "Frontend for Merkato Marketplace",
  "scripts": {
  "dev": "craco start",
  "start": "craco start",
  "start:3000": "cross-env PORT=3000 craco start",
  "start:3010": "cross-env PORT=3010 craco start",
  "start:no-open": "cross-env BROWSER=none craco start",
  "build": "craco build",
  "test": "cross-env CI=true craco test --env=jsdom --watchAll=false --runInBand",
  "cypress": "cypress open",
  "cy:open": "cypress open",
  "start:e2e": "node scripts/start-e2e.js",
  "e2e:run": "node ./scripts/run-e2e.js",
  "cy:run": "node ./scripts/run-e2e.js",
  "cy:run:docker": "node ./scripts/run-e2e_docker.js",
  "e2e:checkout": "cross-env E2E_SPEC=cypress/e2e/checkout_payment.cy.js,cypress/e2e/customer_checkout.cy.js,cypress/e2e/guest_checkout.cy.js node ./scripts/run-e2e.js",
  "e2e:core": "cross-env E2E_SPEC=cypress/e2e/basic_navigation.cy.js,cypress/e2e/shop_visibility.cy.js,cypress/e2e/cart_checkout_button.cy.js,cypress/e2e/login_error.cy.js,cypress/e2e/product_detail_add_to_cart.cy.js,cypress/e2e/checkout_payment.cy.js,cypress/e2e/guest_checkout.cy.js node ./scripts/run-e2e.js",
    "seed": "curl -X POST http://localhost:5000/api/dev/seed",
    "test:manual": "npm run seed && npm start",
    "serve:prod": "npm run build && serve -s build -l 3000"
  },
  "dependencies": {
    "axios": "^1.3.6",
    "axios-mock-adapter": "^2.1.0",
    "chart.js": "^4.4.9",
    "html2pdf.js": "^0.10.3",
    "lucide-react": "^0.525.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-feather": "^2.0.10",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-router-dom": "^6.30.0",
    "react-spinners": "^0.17.0",
    "react-toastify": "^11.0.5",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
  "cross-env": "^7.0.3",
  "concurrently": "^9.1.2",
  "wait-on": "^8.0.2",
  "get-port": "^7.1.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.27.6",
    "@craco/craco": "^5.9.0",
    "@stripe/stripe-js": "^7.8.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.0.2",
    "cypress": "^14.5.3",
    "cypress-file-upload": "^5.0.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.2.1",
    "process": "^0.11.10",
    "resolve-url-loader": "^5.0.0",
    "serve": "^14.2.4",
    "source-map-loader": "^5.0.0",
    "webpack": "^5.99.9",
  "webpack-dev-server": "^5.2.2"
  },
  "proxy": "http://localhost:5000",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
